<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.WrongPage"
              BackgroundColor="White"
             Title="WrongPage">
    <VerticalStackLayout>
        <Label 
            Text="Wrong!!"
            TextColor="Black"
            FontSize="45"
            VerticalOptions="Center" 
            Margin="18"
            HorizontalOptions="Center" />
        <Label 
            Text="Wrong answer, Please practice well"
            TextColor="Black"
            FontSize="45"
            VerticalOptions="Center" 
            Margin="18"
            HorizontalOptions="Center" />
        <Button WidthRequest="700" TextColor="Black" BackgroundColor="BlueViolet" Text="Try Again" Clicked="tryAgain" Margin="18"/>
        <Button WidthRequest="700" TextColor="Black" BackgroundColor="BlueViolet" Text=" skip to Next Question" Clicked="navigateToNextQuestion" Margin="18"/>
    </VerticalStackLayout>
</ContentPage>