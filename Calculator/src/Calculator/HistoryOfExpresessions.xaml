<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.HistoryOfExpresessions"
             BackgroundColor="White"
             Title="History Of Calculations">
    <VerticalStackLayout>
        <Label 
            Text="View History of Calculations"
            FontSize="50"
            TextColor="Black"
            FontAttributes="Bold"
            Margin="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView BackgroundColor="BlueViolet" WidthRequest="600" HeightRequest="350"  ItemsSource="{ Binding history}"></ListView>
    </VerticalStackLayout>
</ContentPage>