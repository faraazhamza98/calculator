<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Calculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Calculator"
    Shell.FlyoutBehavior="Flyout"
    >

    <ShellContent
        Title="Calculator"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Advance Calculator"
        ContentTemplate="{DataTemplate local:AdvanceCalculator}"
        Route="AdvanceCalculator" />
    <ShellContent
        Title="About Team"
        ContentTemplate="{DataTemplate local:AboutTeam}"
        Route="AboutTeam" />
    <ShellContent
        Title="Themes"
        ContentTemplate="{DataTemplate local:SelectTheme}"
        Route="ThemeSelectionPage" />
    <ShellContent
        Title="Exam"
        ContentTemplate="{DataTemplate local:ExamPage}"
        Route="ExamPage" />
    <ShellContent
        Title="Calculations History"
        ContentTemplate="{DataTemplate local:HistoryOfExpresessions}"
        Route="HistoryOfExpressionPage" />

</Shell>